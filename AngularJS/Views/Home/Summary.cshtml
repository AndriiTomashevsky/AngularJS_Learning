@using AngularJS.Models

@model IEnumerable<Reservation>

<div class="panel panel-primary">
	<div class="panel-heading">
		Reservation Summary
	</div>
	<div class="panel-body">
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Location</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.ReservationId
						</td>
						<td>
							@item.ClientName
						</td>
						<td>
							@item.Location
						</td>
						<td>
							@Html.ActionLink("Remove", "Remove", new { item.ReservationId }, new { @class = "btn btn-xs btn-primary" })
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

